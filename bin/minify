#!/bin/bash
set -Eeuxo pipefail

OUTPUT=minified
mkdir -p -v $OUTPUT/font
cp font/*.otf $OUTPUT/font
cp -r static $OUTPUT
mv $OUTPUT/static/*work*.js $OUTPUT

npx csso style.css --comments none > $OUTPUT/style.css
npx html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true index.html > $OUTPUT/index.html